<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shen.ecard.DisplayActivity">

    <ImageView
        android:id="@+id/displaybarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        app:srcCompat="@color/common_google_signin_btn_text_dark_pressed"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/displaylogo"
        android:layout_width="140dp"
        android:layout_height="100dp"
        app:srcCompat="@color/common_google_signin_btn_text_dark_pressed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/displaylogo"
        android:gravity="center"
        android:textSize="20sp" />
</RelativeLayout>
